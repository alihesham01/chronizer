# Database — PostgreSQL
DATABASE_URL=postgres://woke_user:CHANGE_ME@localhost:5432/woke_portal
DB_POOL_SIZE=20
QUERY_TIMEOUT=30000

# JWT — generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Must be set in production. App will refuse to start without it.
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_HEX
JWT_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# Frontend URL — used for invite links and CORS
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001

# Frontend env (prefix with NEXT_PUBLIC_ for client-side access)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Pagination defaults
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000
