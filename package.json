{
  "name": "chronizer",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "swc src --out-dir dist --strip-leading-paths",
    "start": "node dist/index.js",
    "db:setup": "tsx scripts/setup-db.ts",
    "test": "echo \"Tests not implemented yet\" && exit 0",
    "lint": "echo \"Linting not implemented yet\" && exit 0",
    "security:check": "npm audit --audit-level high",
    "security:fix": "npm audit fix --force",
    "generate:jwt": "node scripts/generate-jwt-secret.js",
    "setup:production": "node scripts/setup-production.js",
    "setup:database": "node scripts/setup-database.js",
    "docker:build": "docker build --no-cache -t chronizer-backend .",
    "docker:build:optimized": "scripts/docker-build.bat",
    "docker:run": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.5",
    "@hono/zod-validator": "^0.7.6",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.3.1",
    "hono": "^4.6.7",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.18.0",
    "tsx": "^4.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc/cli": "^0.8.0",
    "@swc/core": "^1.15.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.17.6",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.7.2"
  }
}
